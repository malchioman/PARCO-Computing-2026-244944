# IMPORTANT: non scrivere direttamente in logs/ qui, perchÃ© PBS apre il file PRIMA che lo script crei la cartella.
#PBS -o weak.out

set -euo pipefail

export OMPI_MCA_oob=tcp
export OMPI_MCA_btl=self,tcp
export OMPI_MCA_mpi_cuda_support=0

cd "${PBS_O_WORKDIR:?PBS_O_WORKDIR not set}"

module purge
module load gcc91
module load openmpi-3.0.0--gcc-9.1.0
module load cmake-3.15.4

mkdir -p logs results bin/matrices
chmod +x script/weak.sh

# Parametri weak
export ROWS_PER_RANK=16384
export NNZ_PER_RANK=1000000

# Esegui e salva output anche in logs (oltre al weak.out di PBS)
./script/weak.sh 2>&1 | tee logs/weak.out